import os
import sys
import subprocess
import json
from datetime import datetime

def run_command(command, description):
    """Safely run system command"""
    print(f"ğŸ”§ {description}...")
    try:
        result = subprocess.run(command, shell=True, capture_output=True, text=True)
        if result.returncode == 0:
            print(f"âœ… {description} completed")
            return True
        else:
            print(f"âŒ {description} failed: {result.stderr}")
            return False
    except Exception as e:
        print(f"âŒ {description} error: {e}")
        return False

def check_python_version():
    """Check Python version"""
    print("ğŸ Checking Python version...")
    if sys.version_info < (3, 6):
        print("âŒ Python 3.6 or higher required")
        return False
    print(f"âœ… Python {sys.version_info.major}.{sys.version_info.minor} detected")
    return True

def install_requirements():
    """Install required packages"""
    requirements = [
        "colorama==0.4.6",
        "requests==2.31.0"
    ]
    
    print("ğŸ“¦ Installing requirements...")
    
    for package in requirements:
        if not run_command(f"pip install {package}", f"Installing {package}"):
            return False
    
    return True

def setup_directories():
    """Create required directories"""
    directories = [
        '../CONFIG',
        '../CORE_SYSTEM',
        '../CONTROL_PANEL', 
        '../DATA/users',
        '../DATA/bots',
        '../DATA/analytics',
        '../DATA/backups',
        '../LOGS'
    ]
    
    print("ğŸ“ Creating directories...")
    
    for directory in directories:
        try:
            os.makedirs(directory, exist_ok=True)
            print(f"âœ… Created: {directory}")
        except Exception as e:
            print(f"âŒ Failed to create {directory}: {e}")
            return False
    
    return True

def create_config_files():
    """Create default configuration files"""
    print("âš™ï¸ Creating config files...")
    
    # global_settings.json
    global_config = {
        "app_name": "UltimateSMM Bot",
        "version": "1.0.0",
        "auto_schedule": {
            "active_hours": ["06:00", "23:00"],
            "break_interval": 60,
            "break_duration": 15,
            "auto_restart": True
        },
        "system": {
            "max_users": 100,
            "max_bot_accounts": 500,
            "update_interval": 300
        },
        "language": "bn",
        "timezone": "Asia/Dhaka"
    }
    
    try:
        with open('../CONFIG/global_settings.json', 'w') as f:
            json.dump(global_config, f, indent=4)
        print("âœ… Created: CONFIG/global_settings.json")
    except Exception as e:
        print(f"âŒ Failed to create config: {e}")
        return False
    
    return True

